<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget
    id="org.TADL.TADLMobile"
    version="3.0.0"
    versionCode="300"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0" >

    <name>TADL</name>

    <description>
        Traverse Area District Library Mobile Application
    </description>

    <author email="tech@tadl.org" href="http://www.tadl.org/">
        Traverse Area District Library Technology Team
    </author>

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <content src="index.html"/>
    <access origin="*"/>

    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="android-minSdkVersion" value="16"/>
    <preference name="BackupWebStorage" value="none"/>

    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true"/>
    </feature>

    <gap:config-file platform="ios" parent="CFBundleVersion">
        <string>3000</string>
    </gap:config-file>

    <gap:plugin name="com.ionic.keyboard" version="1.0.3" />

</widget>
